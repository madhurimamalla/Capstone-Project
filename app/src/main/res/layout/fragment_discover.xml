<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movie_poster_discover_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <ImageView
            android:id="@+id/dont_like_movie"
            android:layout_width="@dimen/fragment_discover_layout_width"
            android:layout_height="@dimen/fragment_discover_layout_height"
            android:layout_gravity="bottom|right"
            android:alpha="0.8"
            android:cropToPadding="false"
            android:src="@drawable/like_flat" />

        <ImageView
            android:id="@+id/add_to_watchlist"
            android:layout_width="@dimen/fragment_discover_layout_width"
            android:layout_height="@dimen/fragment_discover_layout_height"
            android:layout_gravity="bottom|center"
            android:alpha="0.8"
            android:cropToPadding="false"
            android:src="@drawable/binoculars" />

        <ImageView
            android:id="@+id/like_movie"
            android:layout_width="@dimen/fragment_discover_layout_width"
            android:layout_height="@dimen/fragment_discover_layout_height"
            android:layout_gravity="bottom|left"
            android:alpha="0.8"
            android:cropToPadding="false"
            android:src="@drawable/dislike" />

    </FrameLayout>
</android.support.constraint.ConstraintLayout>