<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryLight">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:minHeight="@dimen/plot_summary_linearlayout_minheight"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/plot_summary_peekheight"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
        <!-- Remove this layout_behaviour to make it not show a blank screen -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/plot_summary_modal_textview_margin"
            android:padding="@dimen/plot_summary_modal_textview_padding"
            android:text="@string/plot_summary"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/plot_summary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/plot_summary_modal_text_layout_margin"
            android:padding="@dimen/plot_summary_plot_summary_text_padding"
            android:text="@string/the_plot_follows_the_intertwining_lives_of_two_assassins_a_fatally_ill_teacher_a_janitor_and_a_waitress_all_of_whom_become_part_of_an_evil_mastermind_s_murderous_plan_the_plot_follows_the_intertwining_lives_of_two_assassins_a_fatally_ill_teacher_a_janitor_and_a_waitress_all_of_whom_become_part_of_an_evil_mastermind_s_murderous_plan"
            android:textAlignment="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/plot_summary_modal_view_layout_height" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
